{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "typeRoots": ["../node_modules/@types", "../typings"],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    // "rootDir": "..",
    // "baseUrl": "..",
    "paths": {
      "@docs/*": ["./src/*"],
      "~/*": ["../src/*"]
    }
  },

  "include": ["src/**/*.ts"]
  // "exclude": ["src/**/*.stories.ts"]
}
